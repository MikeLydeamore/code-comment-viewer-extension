{
  "name": "code-comment-viewer",
  "displayName": "Code Comment Viewer",
  "description": "Show all HTML comments in the current file in a sidebar and highlight them in the editor.",
  "version": "0.1.2",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:code-comment-viewer.commentsSidebar",
    "onCommand:code-comment-viewer.helloWorld"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeCommentViewer",
          "title": "Comment Viewer",
          "icon": "resources/comment.svg"
        }
      ]
    },
    "views": {
      "codeCommentViewer": [
        {
          "id": "code-comment-viewer.commentsSidebar",
          "name": "HTML Comments",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "code-comment-viewer.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  },
  "publisher": "MichaelLydeamore",
  "repository": {
    "type": "git",
    "url": "https://www.github.com/MikeLydeamore/code-comment-viewer-extension"
  },
  "icon": "logo.png"
}
